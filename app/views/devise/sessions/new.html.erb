<section class="cart-total-page spad my-5">   
  <div class="container checkout-form">
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="row">
        <div class="col-lg-12 text-center">
          <h3>Connexion</h3>
        </div>
        <div class="col-lg-12">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="col-lg-11">
          <!--EMAIL-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">email*</p>
            </div>
            <div class="col-lg-7">
              <%= f.email_field :email, autofocus: true, placeholder: "viens@parlamonpetit.com" %>
            </div>
          </div>
          <!--Password-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Mot de passe</p>
            </div>
            <div class="col-lg-7">
              <%= f.password_field :password, placeholder: "ton mot de passe" %>
              <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>
          </div>

          <!-- checkbox -->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Se souvenir de moi</p>
            </div>
            <div class="col-lg-7">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                </div>
              <% end %>
            </div>
          </div>

          <!--bouton-->
          <div class="row">
            <div class="col-lg-3">  
            </div>
            
            <div class="btn">
              <%= f.submit "Se connecter", :class => 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    <!--end of the form-->
    <% end %>
  </div>
</section>



<section class="cart-total-page spad my-5">   
  <div class="container checkout-form">
      <div class="row">
        <div class="col-lg-11 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</section>











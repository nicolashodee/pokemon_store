<section class="cart-total-page spad my-5">   
  <div class="container checkout-form">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
      <div class="row">
        <div class="col-lg-12">
          
          <h3>Modifiez vos informations, <%= @user.first_name %>.</h3>
        </div>
        <div class="col-lg-12">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="col-lg-11">
          <!--First name, last name-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Nom*</p>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :first_name, autofocus: true, placeholder: "Marc" %>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :last_name, autofocus: true, placeholder: "Dutroux" %>
            </div>
          </div>
          <!--EMAIL-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">email*</p>
            </div>
            <div class="col-lg-8">
              <%= f.email_field :email, autofocus: true, placeholder: "viens@parlamonpetit.com" %>
            </div>
          </div>
          <!--Description-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Description</p>
            </div>
            <div class="col-lg-8">
              <%= f.text_field :description, autofocus: true, placeholder: "j'aime les petits pokemon, si tu vois ce que je veux dire" %>
            </div>
          </div>
          <!--current password-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Mot de passe actuel*</p>
            </div>
            <div class="col-lg-8">
              <%= f.password_field :current_password, autocomplete: "votre mot de passe actuel",  class: "form-control" %>
            </div>
          </div>
          <!--new password-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Nouveau mot de passe*</p>
            </div>
            <div class="col-lg-8">
              <%= f.password_field :password, autocomplete: "votre nouveau mot de passe", class: "form-control" %>
              <% if @minimum_password_length %>
                <small id="passwordHelpBlock" class="form-text text-muted">
                  <i>(leave blank if you dont want to change it)</i><br>
                  <em><%= @minimum_password_length %> characters minimum</em> &#127817;
                </small>
              <% end %>
            </div>
          </div>
          <!--new password confirmation-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Confirmation du nouveau mot de passe*</p>
            </div>
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, autocomplete: "retapez votre nouveau mot de passe", class: "form-control" %>
            </div>
          </div>
          <!--Address-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Adresse*</p>
            </div>
            <div class="col-lg-8">
                 <%= f.text_field :address, autofocus: true, placeholder: "dans ta cave" %>
            </div>
          </div>
          <!--Postal code-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Code Postal</p>
            </div>
            <div class="col-lg-5">
              <%= f.text_field :postcode, autofocus: true, placeholder: "appelle la poste" %>
            </div>
          </div>
          <!--Date de naissance-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Date de naissance*</p>
            </div>
            <div class="col-lg-7">
              <%= f.date_field :dob, autofocus: true, placeholder: "26/08/1980"%>
            </div>
          </div>
          <!--bouton-->
          <div class="row">
            <div class="col-lg-3">  
            </div>
            
            <div class="btn">
              <%= f.submit "Modifier mes infos", :class => 'btn btn-outline-secondary' %>
            </div>
          </div>
          
        </div>
      </div>
    <!--end of the form-->
    <% end %>
    <div class="row">
      <div class="col-lg-11">
        <!--bouton go back-->
        <div class="row">
          <div class="col-lg-3">  
          </div>
          
          <div class="btn">
            <%= link_to "Retour au profil", :back, :class => 'btn btn-outline-secondary'  %>
          </div>
        </div>
      
        <!--close account -->
        <div class="row">
          <div class="col-lg-3">  
            <p class="in-name">Bah t'es pas content? </p>
          </div>
          <div class="btn">
            <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-outline-danger' %>
          </div>
        </div>
      </div>
    </div>
   
  </div>
</section>



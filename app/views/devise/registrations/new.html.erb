<section class="cart-total-page spad my-5">   
  <div class="container checkout-form">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="row">
        <div class="col-lg-12">
          <h3>Inscrivez vous, <small><i>et attrapez les tous !</i></small> &#128034;&#128033;&#128027;&#128025;</h3>
        </div>
        <div class="col-lg-12">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="col-lg-11">
          <!--First name, last name-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Nom*</p>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :first_name, autofocus: true, placeholder: "Marc" %>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :last_name, autofocus: true, placeholder: "Dutroux" %>
            </div>
          </div>
          <!--EMAIL-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">email*</p>
            </div>
            <div class="col-lg-8">
              <%= f.email_field :email, autofocus: true, placeholder: "viens@parlamonpetit.com" %>
            </div>
          </div>
          <!--Description-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Description</p>
            </div>
            <div class="col-lg-8">
              <%= f.text_field :description, autofocus: true, placeholder: "j'aime les petits pokemon, si tu vois ce que je veux dire" %>
            </div>
          </div>
          <!--Address-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Adresse*</p>
            </div>
            <div class="col-lg-8">
                 <%= f.text_field :address, autofocus: true, placeholder: "dans ta cave" %>
            </div>
          </div>
          <!--Postal code-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Code Postal</p>
            </div>
            <div class="col-lg-5">
              <%= f.text_field :postcode, autofocus: true, placeholder: "appelle la poste" %>
            </div>
          </div>
          <!--Date de naissance-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Date de naissance*</p>
            </div>
            <div class="col-lg-7">
              <%= f.date_field :dob, autofocus: true, placeholder: "26/08/1980"%>
            </div>
          </div>
          <!--Password-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">Mot de passe</p>
            </div>
            <div class="col-lg-7">
              <%= f.password_field :password, placeholder: "ton mot de passe" %>
              <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>
          </div>
          <!--Password-->
          <div class="row">
            <div class="col-lg-3">
              <p class="in-name">confirmation du mot de passe</p>
            </div>
            <div class="col-lg-5">
              <%= f.password_field :password_confirmation, placeholder: "confirmation du mot de passe" %>
            </div>
          </div>
          <!--bouton-->
          <div class="row">
            <div class="col-lg-3">  
            </div>
            
            <div class="btn">
              <%= f.submit "S'inscrire", :class => 'btn btn-outline-secondary' %>
            </div>
          </div>
        </div>
      </div>
    <!--end of the form-->
    <% end %>
  </div>
</section>



